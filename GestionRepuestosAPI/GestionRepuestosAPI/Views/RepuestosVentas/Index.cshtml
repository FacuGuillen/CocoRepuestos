@model IEnumerable<GestionRepuestosAPI.Models.RepuestosVenta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TasaCambio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioVentaUnitarioEnARS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RepuestoStock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TasaCambio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioVentaUnitarioEnARS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RepuestoStock.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
